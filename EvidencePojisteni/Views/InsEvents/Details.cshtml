@model EvidencePojisteni.Models.InsEvent

@{
	ViewData["Title"] = "Podrobnosti pojistné události";
}

<div class="container-fluid page-header py-3 mb-3 wow fadeIn" data-wow-delay="0.1s">
	<div class="container py-5">
		<h1 class="display-4 animated slideInDown mb-4">@ViewData["Title"]</h1>
	</div>
</div>

<div class="container">

	<div>
		<div class="d-flex justify-content-between align-items-center">
			<h4>@ViewBag.Insured.FirstName @ViewBag.Insured.LastName</h4>
			<div>
				@if (User.IsInRole("admin"))
				{
					<a role="button" class="btn btn-sm btn-warning text-light" asp-action="Edit" asp-route-id="@Model?.Id">Upravit</a>
				}
				<a role="button" class="btn btn-sm btn-primary text-light" asp-action="Index">Zpět</a>
			</div>
		</div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Pojištěnec
			</dt>
			<dd class="col-sm-10">
				<a asp-controller="Insureds" asp-action="Details" asp-route-id="@ViewBag.Insured.Id">
					@ViewBag.Insured.FirstName @ViewBag.Insured.LastName
				</a>
			</dd>
			<dt class="col-sm-2">
				Typ pojištění
			</dt>
			<dd class="col-sm-10">
				@ViewBag.Insurance.Type
			</dd>
			<dt class="col-sm-2">
				Předmět pojištění
			</dt>
			<dd class="col-sm-10">
				@ViewBag.Insurance.Subject
			</dd>
		</dl>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Name)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Name)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Date)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Date)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Description)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Description)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Amount)
			</dt>
			<dd class="col-sm-10">
				@(Model.Amount != null ? Model.Amount.ToString() : "-") Kč
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Status)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Status)
			</dd>
		</dl>
	</div>
</div>