@model EvidencePojisteni.Models.InsEvent

@{
	ViewData["Title"] = "Upravit pojistnou událost";
}

<div class="container-fluid page-header py-3 mb-3 wow fadeIn" data-wow-delay="0.1s">
	<div class="container py-5">
		<h1 class="display-4 animated slideInDown mb-4">@ViewData["Title"]</h1>
	</div>
</div>

<div class="container">

	<dl class="row">
		<dt class="col-sm-2">
			Pojištěnec
		</dt>
		<dd class="col-sm-10">
			<a asp-controller="Insureds" asp-action="Details" asp-route-id="@ViewBag.Insured.Id">
				@ViewBag.Insured.FirstName @ViewBag.Insured.LastName
			</a>
		</dd>
		<dt class="col-sm-2">
			Typ pojištění
		</dt>
		<dd class="col-sm-10">
			@ViewBag.Insurance.Type
		</dd>
		<dt class="col-sm-2">
			Předmět pojištění
		</dt>
		<dd class="col-sm-10">
			@ViewBag.Insurance.Subject
		</dd>
	</dl>
	<hr />
	<form class="row" asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="InsuranceId" />
		<div class="row">
			<div class="form-group col-lg-3">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group col-lg-3">
				<label asp-for="Date" class="control-label"></label>
				<input asp-for="Date" class="form-control" />
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-lg-4">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" class="form-control" asp-items="InsEvent.GetStatusTypes()"></select>
			</div>
			<div class="form-group col-lg-2">
				<label asp-for="Amount" class="control-label"></label>
				<input asp-for="Amount" class="form-control" />
				<span asp-validation-for="Amount" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="form-outline col-lg-6">
				<label asp-for="Description" class="control-label"></label>
				<textarea asp-for="Description" class="form-control" rows="4"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
		</div>

		<div class="col-lg-6 my-3">
			<input type="submit" value="Uložit" class="btn btn-sm btn-success" />
			<a role="button" class="btn btn-sm btn-primary text-light" asp-action="Index">Zpět</a>
		</div>
	</form>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
