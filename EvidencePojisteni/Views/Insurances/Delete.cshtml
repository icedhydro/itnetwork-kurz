@model EvidencePojisteni.Models.Insurance

@{
	ViewData["Title"] = "Odstranit pojištění";
}

<div class="container-fluid page-header py-3 mb-3 wow fadeIn" data-wow-delay="0.1s">
	<div class="container py-5">
		<h1 class="display-4 animated slideInDown mb-4">@ViewData["Title"]</h1>
	</div>
</div>

<div class="container">

	<h3>Opravdu si přejete odstranit pojištění uživatele @Html.DisplayFor(model => model.Insured.FirstName) @Html.DisplayFor(model => model.Insured.LastName)?</h3>
	<div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Type)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Type)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Amount)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Amount) Kč
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Subject)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Subject)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ValidFrom)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ValidFrom)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ValidUntil)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ValidUntil)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Odstranit" class="btn btn-sm btn-danger" />
			<a role="button" class="btn btn-sm btn-primary text-light" asp-action="Index">Zpět</a>
		</form>

	</div>
</div>
